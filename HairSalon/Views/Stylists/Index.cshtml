@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>

<p class="view-title">Stylists</p>

@if (Model.Count == 0)
{
  <p>No Stylists Have Been Added Yet</p>
}

@foreach (Stylist stylist in Model)
{
  <div class="stylist">
    @Html.ActionLink($"{stylist.FirstName} {stylist.LastName}", "Details", new {id = stylist.StylistId })
  </div>
}