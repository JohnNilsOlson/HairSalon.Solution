@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>

<p class="view-title">Clients</p>
@if (Model.Count == 0)
{
  <p>No Clients Have Been Added Yet</p>
}

@foreach (Stylist stylist in ViewBag.Stylists)
{
  <div class="stylist">
    <p>Stylist</p>
    @Html.ActionLink($"{stylist.FirstName} {stylist.LastName}", "Details", new {id = stylist.StylistId })
    <hr />
    <p>Clients</p>
    @foreach (Client client in Model)
    {
      if (client.StylistId == stylist.StylistId)
      {
        <div class="client">
          @Html.ActionLink($"{client.FirstName} {client.LastName}", "Details", new {id = client.ClientId })
        </div>
      }
    }
  </div>
}